'use strict';const brd_web_scraper_dir={data:{},init(){this.show_by_first_letter();this.show_on_click();this.disable_submit();this.show_more()},get_data(){let section=document.querySelector('section.scraper_directory');if(!section)
return brd_com_dir_data;let data=section.getAttribute('data-com_dir');try{return JSON.parse(data)}catch(e){return brd_com_dir_data}},show_by_first_letter(first_letter=''){first_letter=first_letter===''?window.location.hash.charAt(1):first_letter;first_letter=first_letter===''?'A':first_letter;first_letter=first_letter==='?'?'A':first_letter;const cont=document.querySelector('.companies_list');const letters=document.querySelectorAll('.letters_list .scroll_btn');letters.forEach(l=>l.classList.remove('active'));const the_letter=document.querySelector(`.letters_list .scroll_btn[data-content=${first_letter}]`);if(the_letter)
the_letter.classList.add('active');const res=[];let data=this.get_data();for(let i=0;i<data.length;i++){if(data[i].value.charAt(0)!=first_letter&&first_letter!='all')
continue;res.push({value:data[i].value,url:data[i].url})}
cont.replaceChildren();for(let i=0;i<res.length;i++){const card=document.createElement('a');card.classList.add('d-flex','companies_list_item','company_item','py-2','px-3','border','br-1','color-white','body_l','bg-dark_2');card.setAttribute('href',res[i].url);card.innerText=res[i].value;const link_cls=document.createElement('div');link_cls.classList.add('col-lg-3','col-md-6','mb-3');link_cls.appendChild(card);cont.appendChild(link_cls)}},show_on_click(){const letters=document.querySelectorAll('.letters_list .scroll_btn');if(!letters.length){this.show_by_first_letter('all');return}
letters.forEach(el=>el.addEventListener('click',e=>{e.preventDefault();const letter=e.target.getAttribute('data-content').charAt(0);if(!letter)
return;this.show_by_first_letter(letter);e.target.classList.add('active')}))},disable_submit(){const form=document.querySelector('.company_search');const btn=form.querySelector('.company_search_submit');if(form)
form.addEventListener('submit',e=>e.preventDefault);if(btn)
btn.addEventListener('click',e=>e.preventDefault())},show_more(){const companies_list_div=document.querySelector('.companies_list');if(!companies_list_div||!companies_list_div.classList.contains('show_more')){return!1}
const items=companies_list_div.querySelectorAll('.col-lg-3.col-md-6.mb-3');const s_width=window.innerWidth;let items_to_show=16;if(s_width<1024)
items_to_show=8;if(s_width<768)
items_to_show=4;let visible_items=items_to_show;items.forEach((item,index)=>{if(index>=visible_items)
item.style.display='none'});const load_more_btn=document.getElementById('load_more_btn');load_more_btn.addEventListener('click',event=>{event.preventDefault();for(let i=visible_items;i<visible_items+items_to_show;i++){if(items[i])
items[i].style.display='block';else{load_more_btn.style.display='none';break}}
visible_items+=items_to_show});if(visible_items>=items.length)
load_more_btn.style.display='none'}};brd_web_scraper_dir.init()