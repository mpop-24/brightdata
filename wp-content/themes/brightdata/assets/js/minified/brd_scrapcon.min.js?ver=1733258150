'use strict';document.addEventListener('DOMContentLoaded',()=>{const show_item=(index,count)=>{cont_items.forEach(content=>content.classList.remove('active'));const cont_to_show=document.querySelector(`.sc_content[data-index="${index}"]`);if(cont_to_show)
cont_to_show.classList.add('active');count.innerHTML=index.replace('sc-item-','')};const show_more_text=()=>{const contents=document.querySelectorAll('.sc_content .body');contents.forEach(content=>{const orig_cont=content.innerHTML;let first_paragraph=orig_cont.split('</p>')[0];if(window.innerWidth<576){const words=first_paragraph.split(' ');first_paragraph=words.slice(0,5).join(' ')}
const cut_content=`<p class="short">${first_paragraph}</p>`;content.innerHTML=cut_content;const show_more_btn=document.createElement('div');const show_less_btn=document.createElement('div');show_more_btn.textContent='...Show more';show_less_btn.textContent='Show less';show_more_btn.classList.add('more','body_bold','show_text','mt-0','mt-md-2','color-secondary_1','ml-1');show_less_btn.classList.add('less','body_bold','show_text','mt-0','mt-md-2','color-secondary_1','ml-1');content.insertAdjacentElement('afterend',show_more_btn);content.insertAdjacentElement('afterend',show_less_btn);show_more_btn.addEventListener('click',()=>{content.innerHTML=orig_cont;show_more_btn.style.display='none';show_less_btn.style.display='inline'});show_less_btn.addEventListener('click',()=>{content.innerHTML=cut_content;show_less_btn.style.display='none';show_more_btn.style.display='inline'})})};const show_more_cards=()=>{const more_cards=document.querySelector('#more_cards');if(more_cards)
return!1;const cards_row=document.querySelector('.cards .row');const cards_btn=document.createElement('div');const all_cards=document.querySelectorAll('.card_wrapper');cards_btn.classList.add('all_cards','text-center','mt-4','body_l');cards_btn.id='more_cards';cards_btn.innerHTML='<div class="d-flex align-items-center '+'justify-content-center show_more"><span class="mr-1">'+'View More</span>'+'<svg role="presentation"> <use href="#ic_dropdown"></use> </svg>'+'</div>';cards_row.append(cards_btn);cards_btn.addEventListener('click',()=>{all_cards.forEach(function(card){card.style.display='block'});cards_btn.style.display='none'})};if(window.innerWidth<=768)
show_more_cards();show_more_text();const nav_items=document.querySelectorAll('.nav .sc_item');const cont_items=document.querySelectorAll('.sc_content');const video_box=document.querySelector('#video_box');let counter=document.querySelector('.sc_title .count');const first_item=document.querySelector('#sc-item-1');if(nav_items.length>0){const first_index=nav_items[0].querySelector('[data-index]').getAttribute('data-index');show_item(first_index,counter);first_item.classList.add('active');video_box.src=nav_items[0].getAttribute('data-video-url')+'?autoplay=1&rel=0'}
nav_items.forEach((item,video_i)=>{item.addEventListener('click',()=>{const index=item.querySelector('[data-index]').getAttribute('data-index');show_item(index,counter);nav_items.forEach(nav=>{nav.classList.remove('active')});item.classList.add('active');video_box.src=nav_items[video_i].getAttribute('data-video-url')+'?autoplay=1&rel=0'})});window.addEventListener('resize',show_more_cards);show_more_cards()})